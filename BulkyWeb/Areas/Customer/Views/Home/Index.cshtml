@model IEnumerable<Product>
@{
    ViewData["Title"] = "Home Page";
}

<div class="row pb-3">
    @foreach(var pdt in Model)
    {
        <div class="col-lg-3 col-sm-6 mt-0 mb-5">
            <div class="row p-2">
                <div class="col-12 p-1">
                    <div class="card border-0 p-3 shadow border-top border-5 rounded">
                        <img src="@pdt.ImageUrl" class="card-img-top rounded" />
                        <div class="card-body pb-0">
                            <div class="pl-1">
                                <p class="card-title h5 text-dark opacity-75 text-uppercase text-center">@pdt.Title</p>
                                <p class="card-title text-warning text-center">by <b>@pdt.Author</b> </p>
                            </div>
                            <div class="pl-1">
                                <p class="text-dark text-opacity-75 text-center mb-0">
                                    List Price:
                                    <span class="text-decoration-line-through">
                                        @pdt.ListPrice.ToString("c")
                                    </span>
                                </p>
                            </div>
                            <div class="pl-1">
                                <p class="text-dark text-opacity-75 text-center">
                                    As low as: 
                                    <span>
                                        @pdt.Price100.ToString("c")
                                    </span> 
                                </p>
                            </div> 
                        </div>
                        <div>
                            <a asp-action="Details" asp-route-pdtId="@pdt.Id" class="btn btn-primary bg-gradient border-0 form-control">
                                Details
                            </a>
                        </div> 
                    </div>
                </div>
            </div>
        </div>
    }
</div>